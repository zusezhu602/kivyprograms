#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

WeatherRoot:

<WeatherRoot>:
    AddLocationForm:

<AddLocationForm>:
    orientation: "vertical"
    search_input: search_box
    search_results: search_results_list
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            size_hint_x: 70
            id: search_box
            multiline: False
            focus: True
            on_text_validate: root.search_location()
        Button:
            text: "Search"
            size_hint_x: 15
            on_press: root.search_location()
        Button:
            text: "Location"
            size_hint_x:15
    ListView:
        id: search_results_list
        adapter:
            ListAdapter(data=[], cls=main.LocationButton, args_converter=root.args_converter)
    Button:
        height: "40dp"
        size_hint_y: None
        text: "Clear"
        on_press: app.root.show_current_weather(None)

<LocationButton>:
    text: "{} ({})".format(self.location[0], self.location[1])
    height: "40dp"
    size_hint_y: None
    on_press: app.root.show_current_weather(self.location)

<CurrentWeather>:
    orientation: "vertical"
    BoxLayout:
        Label:
            text: "{} ({})".format(root.location[0], root.location[1])
        Label:
            text: "{}".format(root.dt)
    BoxLayout:
        Label:
            text: root.conditions
        Label:
            text: "Temperature: {}".format(root.temp)
    BoxLayout:
        Label:
            text: "WindSpeed: {}".format(root.wind_speed)
        Label:
            text: "WindDegree: {}".format(root.wind_deg)
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Add Location"
            on_press: app.root.show_add_location_form()
        Button:
            text: "Forecast"