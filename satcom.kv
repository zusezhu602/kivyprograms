# coding: utf-8
SatcomRoot:
    SatcomIndex:

<SatcomIndex>:
    Label:
        text: ""
        size_hint_x: 10
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 80
        Label:
            text: "Satcom for Phone 1.0"
            size_hint_y: 10
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 70
            Button:
                text: "Frequency"
                on_press: app.root.show_fre_calculate_form()
            Label:
                text: ""
            Button:
                text: "Location"
            Label:
                text: ""
            Button:
                text: "Alignment"
            Label:
                text: ""
            Button:
                text: "Fault"
        Label:
            text: "CopyRight: AngryZe"
            size_hint_y: 5
        Label:
            text: "zusezhu602@163.com"
            size_hint_y: 5
        Label:
            text: "weixin: AngryZe"
            size_hint_y: 5
        Label:
            text: "2016/10/15"
            size_hint_y: 5
    Label:
        text: ""
        size_hint_x: 10

<FreCalculateForm>:
    fre_shift: fre_shift
    fre_interval: fre_interval
    land_emit: land_emit
    land_receive: land_receive
    plane_emit: plane_emit
    plane_receive: plane_receive
    notice: notice
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Frequency Calculation"
            size_hint_y: 10
        BoxLayout:
            size_hint_y: 70
            Label:
                text: ""
                size_hint_x: 10
            BoxLayout:
                size_hint_x: 80
                GridLayout:
                    cols: 2
                    padding: [0, 18, 0, 0]
                    spacing: 38
                    Label:
                        text: "fre_shift"
                    TextInput:
                        id: fre_shift
                        multiline: False
                        text: "1750"
                    Label:
                        text: "fre_interval"
                    TextInput:
                        id: fre_interval
                        multiline: False
                        text: "5"
                    Label:
                        text: "land_emit"
                    TextInput:
                        id: land_emit
                        multiline: False
                        disabled: True
                    Label:
                        text: "land_receive"
                    TextInput:
                        id: land_receive
                        multiline: False
                        background_color: [0, 1, 0, 1]
                    Label:
                        text: "plane_emit"
                    TextInput:
                        id: plane_emit
                        multiline: False
                        disabled: True
                    Label:
                        text: "plane_receive"
                    TextInput:
                        id: plane_receive
                        multiline: False
                        disabled: True
            Label:
                text: ""
                size_hint_x: 10
        BoxLayout:
            size_hint_y: 30
            orientation: "vertical"
            Label:
                id: notice
                text: "Please input data..."
            BoxLayout:
                padding: [54,0,54,18]
                spacing: 54
                Button:
                    text: "Calculate"
                    on_press: root.calculate_frequency()
                Button:
                    text: "Clear"
                    on_press: app.root.show_fre_calculate_form()
            Label:
                text: ""